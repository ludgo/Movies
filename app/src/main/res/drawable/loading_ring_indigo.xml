<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270">

    <shape
        android:innerRadius="24dp"
        android:shape="ring"
        android:thickness="8dp"
        android:useLevel="false">

        <gradient
            android:centerColor="@color/indigo_alpha50"
            android:centerX="0.5"
            android:centerY="0.5"
            android:endColor="@color/indigo_alpha75"
            android:startColor="@color/indigo_alpha25"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>